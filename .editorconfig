# http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# 2 space indentation
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
# Set default charset
charset = utf-8

[*.md]
trim_trailing_whitespace = false